{
  "name": "sl-web-ogg",
  "module": "dist/sl-web-ogg.es.js",
  "unpkg": "dist/sl-web-ogg.umd.js",
  "types": "dist/types/index.d.ts",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --project ./tsconfig.json && cp wasm/middle-layer.wasm dist",
    "build-wasm": "pushd c-source && ./build-wasm.sh && popd",
    "trace": "tsc --traceResolution",
    "preview": "npm run update-preview && vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "update-preview": "npm run build && cp example/* dist && cp wasm/middle-layer.wasm dist"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "testMatch": [
      "**/__tests__/**/*.test.ts?(x)"
    ]
  }
}
